<div class="navbar navbar-inverse">
  <div class="navbar-header">
    <%= link_to "Home", home_path, class: 'navbar-brand' %>
  </div>

  <% if logged_in? %>
    <ul class="nav navbar-nav" style="float:right">
      <li><%= link_to 'Videos', videos_path %></li>
      <li><%= link_to 'Add Video', new_video_path %></li>
      <li><%= link_to "Profile", current_user %></li>
      <% if current_user.admin? %>
          <li><%= link_to "Users", users_path %></li>
      <% end %>
      <li><%= link_to "Log out", logout_path, method: "delete" %></li>
    </ul>
  <%else %>
    <ul class="nav navbar-nav" style="float:right">
      <li><%= link_to "Sign up", signup_path %></li>
      <li><%= link_to "Login", login_path %></li>
      <li><%= link_to "Login with Google",  "/auth/google_oauth2"%></li>
    </ul>

  <%end%>

  <div class="navbar-collapse collapse navbar-responsive-collapse">
      <form class="navbar-form navbar-left" action="http://www.youtube.com/results" method="get" target="_blank">
          <input id="vb_yt_search-term" name="search_query" type="text" class="form-control col-sm-8" placeholder="Search">
          <%
=begin%>
          <select name="search_type" class="dropdown">
            <option value="" >Videos</option>
            <option value="search_users">Channels</option>
          </select>
          <%
=end%>

      </form>

  </div>

</div>
