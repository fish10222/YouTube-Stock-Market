<h1> Edit!</h1>

<%= form_for :user, url: user_path(@user), method: :patch do |f| %>

  <p>
    <%= f.label 'Student\'s name:' %>
    <%= f.text_field :name %>
  </p>



  <p>
    <%= f.label 'Favourite colour:' %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.submit %>
  </p>


<% end %>
