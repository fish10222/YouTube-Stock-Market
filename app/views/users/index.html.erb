<% provide(:title, 'All users') %>

<% countAll = 0 %>
<% countAdmin = 0 %>

<% @user.each do |user| %>
  <% countAll = countAll+1 %>
  <% if user.admin? %>
      <% countAdmin += 1%>
      <div class='adminbox'>
        <%= link_to user.name, user %>
        <span><%= user.email %></span>
        <%= link_to "delete", user, method: :delete,
                        data: { confirm: "You sure?" } %>
      </div>
  <% else %>
  <div class='userbox'>
    <%= link_to user.name, user %>
    <span><%= user.email %></span>
    <%= link_to "delete", user, method: :delete,
                    data: { confirm: "You sure?" } %>
  </div>
    <% end %>

<% end %>
<p>Total number of users: <%= countAll %> <br>
Total number of administrators: <%= countAdmin %></p>

